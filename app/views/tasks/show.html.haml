.row.align-items-center
	=back_link
	%h1= @task.title

.row
	%p Due #{task_due_date(@task)}

.row
	.btn-group
		=link_to 'Edit', edit_task_path, class: 'btn btn-sm btn-outline-secondary'
		=link_to 'Delete', task_path(@task), class: 'btn btn-sm btn-outline-secondary', 
				method: :delete,
				data: { confirm: 'Are you sure?' }
.row.mt-2
	%p=task_completed(@task)

.row
	%p.desc.border.p-2.rounded= @task.description

